{% extends 'VifeedVideoPromoBundle:Default:layout.html.twig' %}

{% block navbar %}
  {# {% include 'VifeedFrontendBundle:Public:navbar.html.twig' %} #}
{% endblock %}

{% block content %}
  <br>
  <div ng-controller="VideoCtrl">
    <div class="video-container">
      <script id="zmbk-script" src="http://{{ tracker_host }}/video/{{ campaignHash }}/{{ platformHash }}/?width=1140&amp;height=670&amp;nextBtn={{ nextBtn }}"></script>
    </div>
    <div class="row">
      <div class="col-md-8"><h1><span ng-bind-html="title"></span></h1></div>
      <div class="col-md-4 views-info">
        <div class="views">{[{views}]}</div>
        <div class="sparkbars">
          <div class="likes" style="width: 80%;"></div>
          <div class="dislikes" style="width: 20%;"></div>
        </div>
        <div class="total-dislikes"><i class="fa fa-thumbs-o-down"></i> {[{dislikes}]}</div>
        <div class="total-likes"><i class="fa fa-thumbs-o-up"></i> {[{likes}]}</div>
      </div>
    </div>
    <hr>
    <div>
      <div class="addthis_sharing_toolbox"></div>
      <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-53a98993717c29f8"></script>
    </div>
    <hr>
    <div class="campaign-info"><span ng-bind-html="description | toHtml"></span></div>
    <br>
    <br>
  </div>
{% endblock %}
