  <h1>Настройки</h1>
  <hr>
  <h2>Персональная информация</h2>
  <hr>
  <form class="form-horizontal ng-scope ng-pristine ng-invalid ng-invalid-required" name="campaign_settings" for="campaign">
    <div class="row">
        <div class="form-group">
            <label for="firstName" class="col-md-3 control-label">
                Имя
            </label>
            <div class="col-md-5">
              <input type="text" class="form-control ng-pristine ng-invalid ng-invalid-required" id="firstName">
            </div>
        </div>
        <div class="form-group">
            <label for="lastName" class="col-md-3 control-label">Фамилия</label>
            <div class="col-md-5">
                <input type="text" class="form-control ng-pristine ng-invalid ng-invalid-required" id="lastName" required="required">
            </div>
        </div>
        <div class="form-group">
            <label for="emain" class="col-md-3 control-label">Email</label>
            <div class="col-md-5">
                <input type="emain" class="form-control ng-pristine ng-invalid ng-invalid-required" id="email" required="required">
            </div>
        </div>
        <div class="form-group">
            <label for="email" class="col-md-3 control-label">Мобильный телефон</label>
            <div class="col-md-5">
                <input type="email" class="form-control ng-pristine ng-invalid ng-invalid-required" id="email" required="required">
            </div>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-md-2">
            <button class="btn btn-primary btn-block" type="button" ng-click="createCampaign()">Сохранить</button>
        </div>
    </div>
  </form>
  <h2>Смена пароля</h2>
  <hr>
  <form class="form-horizontal ng-scope ng-pristine ng-invalid ng-invalid-required" name="campaign_settings" for="campaign">
    <div class="row">
        <div class="form-group">
            <label for="lastName" class="col-md-3 control-label">Старый пароль</label>
            <div class="col-md-5">
                <input type="text" class="form-control ng-pristine ng-invalid ng-invalid-required" id="lastName" required="required">
            </div>
        </div>
        <div class="form-group">
            <label for="emain" class="col-md-3 control-label">Новый пароль</label>
            <div class="col-md-5">
                <input type="emain" class="form-control ng-pristine ng-invalid ng-invalid-required" id="password" required="required">
            </div>
        </div>
        <div class="form-group">
            <label for="emain" class="col-md-3 control-label">Новый пароль еще раз</label>
            <div class="col-md-5">
                <input type="emain" class="form-control ng-pristine ng-invalid ng-invalid-required" id="password" required="required">
            </div>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-md-2">
            <button class="btn btn-primary btn-block" type="button" ng-click="createCampaign()">Сменить пароль</button>
        </div>
    </div>
  </form>
